<?xml version="1.0" encoding="utf-8"?>
<form>
    <subfields name="rokminievents-sources">
        <fieldset name="google" addpath="/modules/mod_rokminievents/lib/RokMiniEvents/Source/google">
            <field name="spacer" type="break" default="" label="Google Settings" description=""/>
            <field name="google" type="list" default="1" label="ROKMINIEVENTS_GOOGLE_LABEL_ENABLE"
                   description="ROKMINIEVENTS_GOOGLE_DESC_ENABLE">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="google_gid" type="text" default="" size="40" label="ROKMINIEVENTS_GOOGLE_LABEL_CALENDARID"
                   description="ROKMINIEVENTS_GOOGLE_DESC_CALENDARID"/>
            <field name="google_past" type="list" default="1" label="ROKMINIEVENTS_GOOGLE_LABEL_PASTEVENTS"
                   description="ROKMINIEVENTS_GOOGLE_DESC_PASTEVENTS">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="google_maxresults" type="text" default="25" size="4"
                   label="ROKMINIEVENTS_GOOGLE_LABEL_MAXRESULTS" description="ROKMINIEVENTS_GOOGLE_DESC_MAXRESULTS"/>
            <field name="google_gcache" type="text" default="3600" label="ROKMINIEVENTS_GOOGLE_LABEL_FEEDCACHE"
                   description="ROKMINIEVENTS_GOOGLE_DESC_FEEDCACHE"/>
            <field name="google_links" type="list" label="ROKMINIEVENTS_GOOGLE_LABEL_LINKTOGOOGLE"
                   description="ROKMINIEVENTS_GOOGLE_DESC_LINKTOGOOGLE">
                <option value="link_no">ROKMINIEVENTS_GOOGLE_DONTLINK</option>
                <option value="link_internal">ROKMINIEVENTS_GOOGLE_LINKASINTERNAL</option>
                <option value="link_external">ROKMINIEVENTS_GOOGLE_LINKASEXTERNAL</option>
            </field>
        </fieldset>
    </subfields>
</form>