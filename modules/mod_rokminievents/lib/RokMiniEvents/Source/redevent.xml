<?xml version="1.0" encoding="utf-8"?>
<form>
    <subfields name="rokminievents-sources">
        <fieldset name="redevent" addpath="/modules/mod_rokminievents/lib/RokMiniEvents/Source/redevent">
            <field name="spacer" type="break" default="" label="RedEvent Settings" description=""/>
            <field name="redevent" type="list" default="1" label="ROKMINIEVENTS_REDEVENT_LABEL_ENABLE"
                   description="ROKMINIEVENTS_REDEVENT_DESC_ENABLE">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="redevent_category" type="redeventcategory" default="0"
                   label="ROKMINIEVENTS_REDEVENT_LABEL_CATEGORY" description="ROKMINIEVENTS_REDEVENT_DESC_CATEGORY"/>
            <field name="redevent_venue" type="redeventvenue" default="0" label="ROKMINIEVENTS_REDEVENT_LABEL_VENUE"
                   description="ROKMINIEVENTS_REDEVENT_DESC_VENUE"/>
            <field name="redevent_total" type="text" size="4" default="10"
                   label="ROKMINIEVENTS_REDEVENT_LABEL_MAXRESULTS"
                   description="ROKMINIEVENTS_REDEVENT_DESC_MAXRESULTS"/>

            <field name="redevent_include_archived" type="list" default="1"
                   label="ROKMINIEVENTS_REDEVENT_LABEL_INCLUDEARCHIVEDEVENTS"
                   description="ROKMINIEVENTS_REDEVENT_DESC_INCLUDEARCHIVEDEVENTS">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="redevent_dates_format" type="list" default="1"
                   label="ROKMINIEVENTS_REDEVENT_LABEL_DATES_FORMAT"
                   description="ROKMINIEVENTS_REDEVENT_DESC__DATES_FORMAT">
                <option value="utc">UTC</option>
                <option value="joomla">JOOMLA_TIMEZONE</option>
            </field>
            <field name="redevent_links" type="list" label="ROKMINIEVENTS_REDEVENT_LABEL_LINKTO"
                   description="ROKMINIEVENTS_REDEVENT_DESC_LINKTO">
                <option value="link_no">ROKMINIEVENTS_REDEVENT_DONTLINK</option>
                <option value="link_internal">ROKMINIEVENTS_REDEVENT_LINKASINTERNAL</option>
                <option value="link_external">ROKMINIEVENTS_REDEVENT_LINKASEXTERNAL</option>
            </field>
        </fieldset>
    </subfields>
</form>